<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/trailer-layout">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/youtubeLogo_width"
            android:layout_height="@dimen/yotubeLogo_height"
            android:contentDescription="@string/youtube"
            android:gravity="center"
            android:src="@drawable/youtube" />

        <Button
            android:id="@+id/trailer"
            android:layout_width="@dimen/trailerButton_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:gravity="center"
            android:text="@string/watch_Trailer" />


</LinearLayout>